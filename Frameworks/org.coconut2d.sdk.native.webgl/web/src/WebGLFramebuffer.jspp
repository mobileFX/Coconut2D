#include "WebGLObject.jspp"

class WebGLFramebuffer : WebGLObject
{
	public var width:Integer;
	public var height:Integer;

	public function Constructor(uid:Integer) : WebGLObject(uid)
	{
		width = 0;
		height = 0;
	}

	public function Destructor()
	{
		if(webgl)
			webgl.deleteFramebuffer(this);
	}
}



